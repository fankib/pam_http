[Unit]
Description=Locki Authentication Server
After=network.target

[Service]
Environment="DISPLAY=:0"
Type=simple
User=<user-to-unlock>
ExecStart=/usr/bin/python <path-to-repo>/lockid/server.py
Restart=on-abort

[Install]
WantedBy=multi-user.target


